<?xml version="1.0" encoding="UTF-8"?>
<configuration monitorInterval="3">
    <appenders>
        <File name="FILE" fileName="D:\log4j2\LOGS.log">
            <PatternLayout pattern="%d{ISO8601} [%-5p] (%F:%L) - %m%n"/>
        </File>
    </appenders>
    <loggers>
        <root level="INFO">
            <appender-ref ref="FILE"/>
        </root>
    </loggers>

</configuration>